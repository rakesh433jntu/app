@model MyApplication.Models.Account

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        <div style="margin-left: 510px;margin-top: 200px;">            
            <table border="0">                
                <tr>
                    <td>@Html.LabelFor(s => s.UserName, "Username") </td>
                    <td>@Html.TextBoxFor(s => s.UserName)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(s => s.Password, "Password") </td>
                    <td>@Html.TextBoxFor(s => s.Password)</td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" value="Login" /> </td>
                </tr>
            </table>
        </div>
    }
</body>
</html>
